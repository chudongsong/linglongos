{
	"name": "linglongos",
	"version": "2.2.0",
	"description": "玲珑OS - 面向多面板API的统一前端操作环境",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"type-check": "turbo run type-check",
		"format": "prettier --write \"**/*.{js,ts,vue,json,md}\"",
		"prepare": "husky install",
		"clean": "bash scripts/clean-modules.sh"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@linglongos/prettier": "workspace:*",
		"@commitlint/config-conventional": "^19.8.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"turbo": "^2.5.5",
		"typescript": "^5.8.3"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@8.12.1"
}
