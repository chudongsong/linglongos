{
  "apps": [
    {
      "id": "file-manager",
      "name": "文件管理器",
      "icon": "./static/images/folder.svg",
      "position": {
        "row": 0,
        "col": 0
      },
      "type": "application",
      "category": "system",
      "action": {
        "type": "open",
        "target": "file-manager",
        "params": {
          "path": "/"
        }
      },
      "metadata": {
        "description": "系统文件管理器",
        "version": "1.0.0",
        "author": "System"
      }
    },
    {
      "id": "browser",
      "name": "浏览器",
      "icon": "./static/images/browser.svg",
      "position": {
        "row": 1,
        "col": 0
      },
      "type": "application",
      "category": "internet",
      "action": {
        "type": "open",
        "target": "browser",
        "params": {
          "url": "https://www.google.com"
        }
      },
      "metadata": {
        "description": "网页浏览器",
        "version": "2.1.0",
        "author": "Browser Team"
      }
    },
    {
      "id": "settings",
      "name": "系统设置",
      "icon": "./static/images/settings.svg",
      "position": {
        "row": 2,
        "col": 0
      },
      "type": "system",
      "category": "system",
      "action": {
        "type": "open",
        "target": "settings",
        "params": {
          "panel": "general"
        }
      },
      "metadata": {
        "description": "系统设置和配置",
        "version": "1.5.0",
        "author": "System"
      }
    }
  ],
  "categories": {
    "system": {
      "name": "系统工具",
      "color": "#3498db"
    },
    "internet": {
      "name": "网络应用",
      "color": "#e74c3c"
    },
    "productivity": {
      "name": "生产力工具",
      "color": "#2ecc71"
    },
    "entertainment": {
      "name": "娱乐应用",
      "color": "#f39c12"
    }
  },
  "startup": {
    "autoStart": ["file-manager"],
    "delay": 2000
  }
}
